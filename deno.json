{
  "name": "@dreamer/render",
  "version": "1.0.20",
  "license": "Apache-2.0",
  "exports": {
    ".": "./src/mod.ts",
    "./client": "./src/client/mod.ts",
    "./client/preact": "./src/client/adapters/preact.ts",
    "./client/react": "./src/client/adapters/react.ts",
    "./client/view": "./src/client/adapters/view.ts"
  },
  "publish": {
    "include": [
      "src/**/*.ts",
      "LICENSE",
      "NOTICE",
      "README.md"
    ],
    "exclude": ["**/*.test.ts", "**/*.spec.ts", "**/test/**", "**/tests/**"]
  },
  "lint": {
    "include": ["src/"],
    "rules": { "tags": ["recommended"], "exclude": ["no-explicit-any"] }
  },
  "imports": {
    "@dreamer/runtime-adapter": "jsr:@dreamer/runtime-adapter@^1.0.5",
    "@dreamer/test": "jsr:@dreamer/test@^1.0.5",
    "@dreamer/view": "jsr:@dreamer/view@^1.0.8",

    "react": "npm:react@19.2.4",
    "react-dom": "npm:react-dom@19.2.4",
    "scheduler": "npm:scheduler@0.27.0",

    "preact": "npm:preact@10.28.3",
    "preact-render-to-string": "npm:preact-render-to-string@6.2.0"
  },
  "nodeModulesDir": "auto",
  "compilerOptions": { "lib": ["deno.window", "dom"] },
  "allowScripts": {
    "allow": [],
    "deny": ["npm:esbuild@0.27.2", "npm:puppeteer@24.36.1"]
  }
}
